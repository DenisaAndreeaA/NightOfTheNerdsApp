<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/badgeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/standView">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/whiteText"
        android:fontFamily="@font/pixel"
        android:background="@color/bgStandOddTitle"
        android:padding="5dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_badge_received"
        tools:layout_editor_absoluteX="114dp"
        android:text="@string/badge_received" />

    <ImageView
        android:id="@+id/iv_badge_received"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="230dp"
        android:scaleType="fitCenter"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/badge_2"/>

</android.support.constraint.ConstraintLayout>